{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UbuntuValues",
  "description": "Values schema for the Ubuntu troubleshooting chart.",
  "type": "object",
  "properties": {
    "global": {
      "description": "Global configuration",
      "type": "object",
      "properties": {
        "imageRegistry": {
          "description": "Global image registry",
          "type": "string"
        },
        "imagePullSecrets": {
          "description": "Global image pull secrets",
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "image": {
      "description": "Image configuration",
      "type": "object",
      "properties": {
        "digest": {
          "description": "Image digest (overrides tag when specified)",
          "type": "string"
        },
        "pullPolicy": {
          "description": "Image pull policy",
          "type": "string",
          "enum": [
            "Always",
            "IfNotPresent",
            "Never"
          ],
          "default": "IfNotPresent"
        },
        "pullSecrets": {
          "description": "Image pull secrets",
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "registry": {
          "description": "Image registry",
          "type": "string"
        },
        "repository": {
          "description": "Image repository",
          "type": "string",
          "default": "ubuntu"
        },
        "tag": {
          "description": "Image tag, defaults to Chart.AppVersion if not set",
          "type": "string"
        }
      }
    },
    "nameOverride": {
      "description": "Override the chart name",
      "type": "string"
    },
    "fullnameOverride": {
      "description": "Override the full name of the chart",
      "type": "string"
    },
    "replicaCount": {
      "description": "Number of replicas",
      "type": "integer",
      "default": 1
    },
    "serviceAccount": {
      "description": "ServiceAccount configuration",
      "type": "object",
      "properties": {
        "create": {
          "description": "Specifies whether a service account should be created",
          "type": "boolean",
          "default": false
        },
        "name": {
          "description": "The name of the service account to use",
          "type": "string"
        },
        "annotations": {
          "description": "Annotations to add to the service account",
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "podAnnotations": {
      "description": "Annotations to add to the pod",
      "type": "object",
      "additionalProperties": true
    },
    "podLabels": {
      "description": "Labels to add to the pod",
      "type": "object",
      "additionalProperties": true
    },
    "podSecurityContext": {
      "description": "Pod security context",
      "type": "object",
      "additionalProperties": true
    },
    "securityContext": {
      "description": "Container security context",
      "type": "object",
      "additionalProperties": true
    },
    "livenessProbe": {
      "description": "Liveness probe configuration",
      "type": "object",
      "properties": {
        "enabled": {
          "description": "Enable liveness probe",
          "type": "boolean",
          "default": false
        },
        "command": {
          "description": "Command to execute for liveness check",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "pidof",
            "sleep"
          ]
        },
        "initialDelaySeconds": {
          "description": "Delay before liveness probe is initiated",
          "type": "integer",
          "default": 30
        },
        "periodSeconds": {
          "description": "How often to perform the probe",
          "type": "integer",
          "default": 10
        },
        "timeoutSeconds": {
          "description": "When the probe times out",
          "type": "integer",
          "default": 5
        },
        "successThreshold": {
          "description": "Minimum consecutive successes for the probe to be considered successful after having failed",
          "type": "integer",
          "default": 1
        },
        "failureThreshold": {
          "description": "Minimum consecutive failures for the probe to be considered failed after having succeeded",
          "type": "integer",
          "default": 3
        }
      }
    },
    "resources": {
      "description": "Resource limits and requests for the container",
      "type": "object",
      "properties": {
        "limits": {
          "description": "Resource limits for the container",
          "type": "object",
          "properties": {
            "memory": {
              "description": "Memory limit",
              "type": "string",
              "default": "128Mi"
            }
          },
          "additionalProperties": true
        },
        "requests": {
          "description": "Resource requests for the container",
          "type": "object",
          "properties": {
            "cpu": {
              "description": "CPU request",
              "type": "string",
              "default": "10m"
            },
            "memory": {
              "description": "Memory request",
              "type": "string",
              "default": "128Mi"
            }
          },
          "additionalProperties": true
        }
      }
    },
    "volumes": {
      "description": "Additional volumes for the pod",
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "volumeMounts": {
      "description": "Additional volume mounts for the container",
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "nodeSelector": {
      "description": "Node selector for pod assignment",
      "type": "object",
      "additionalProperties": true
    },
    "tolerations": {
      "description": "Tolerations for pod assignment",
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "affinity": {
      "description": "Affinity rules for pod assignment",
      "type": "object",
      "additionalProperties": true
    }
  }
}
